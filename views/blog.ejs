<%- include('partials/_header', { 
  pageTitle: blog.name, 
  headerImage: 'img/post-bg.jpg', 
  headerTitle: blog.name, 
  headerSubtitle: '' 
}) %>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1> <%= blog.name %> </h1>
            <p class="lead text-info"> <%= blog.message %> </p>
            <span class="meta">Posted on <%= new Date(blog.dateCreated).toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
